{% extends 'base.html.twig' %}


{% block title %}{{ parent() }} | Carte {{ carte.id }} {% endblock %}

{% block body %}

    <div>
        <h3>[{{ carte.id }}] {{ carte.titlu }}</h3>
        <ul>
            <li>Autor: <a href="{{ path('autor', {id: carte.autor.id}) }}">{{ carte.autor.nume }} {{ carte.autor.prenume }}</a></li>
            <li>Gen: <a href="{{ path('gen', {id: carte.gen.id}) }}">{{ carte.gen.nume }}</a></li>
            <li>Pagini: {{ carte.pagini }}</li>
            <li>Data publicării: {{ carte.getDataPublicarii().format('Y-m-d') }}</li>
        </ul>
    </div>


    {% if clienti %}
        <div>
            <h3>Clienți ce au cumpărat această carte</h3>
            <table>
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nume</th>
                </tr>
                </thead>
                <tbody>
                {% for client in clienti %}
                    <tr>
                        <td class="centered"><a href="{{ path('client', {id: client.id}) }}">{{ client.id }}</a></td>
                        <td><a href="{{ path('client', {id: client.id}) }}">{{ client.nume }} {{ client.prenume }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}