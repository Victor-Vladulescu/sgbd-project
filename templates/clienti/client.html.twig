{% extends 'base.html.twig' %}


{% block title %}{{ parent() }} | Client {{ client.id }} {% endblock %}

{% block body %}

    <div>
        <h3>[{{ client.id }}] {{ client.nume }} {{ client.prenume }}</h3>
    </div>


    {% if carti %}
        <div>
            <h3>Cărți cumpărate de acest client</h3>
            <table>
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Titlu</th>
                    <th>Autor</th>
                    <th>Gen</th>
                </tr>
                </thead>
                <tbody>
                {% for carte in carti %}
                    <tr>
                        <td class="centered"><a href="{{ path('carte', {id: carte.id}) }}">{{ carte.id }}</a></td>
                        <td><a href="{{ path('carte', {id: carte.id}) }}">{{ carte.titlu }}</a></td>
                        <td><a href="{{ path('autor', {id: carte.autor.id}) }}">{{ carte.autor.nume }} {{ carte.autor.prenume }}</a></td>
                        <td><a href="{{ path('gen', {id: carte.gen.id}) }}">{{ carte.gen.nume }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}